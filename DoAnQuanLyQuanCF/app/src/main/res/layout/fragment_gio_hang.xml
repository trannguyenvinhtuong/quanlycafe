<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".khachhang.fragment.GioHangFragment"
    android:weightSum="10"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:id="@+id/txtsoban"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Nhập số bàn..."
            android:textSize="14dp"
            android:layout_margin="10dp"
            ></EditText>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnxoahet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa hết"
            android:gravity="center"
            />
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ghthongbao"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:text="Giỏ hàng đang trống"
                />
            <ListView
                android:id="@+id/lstgiohang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tongtien"
            android:id="@+id/ghtongtien"
            android:textSize="18dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnthanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt món"
            android:layout_gravity="right"
            />

    </LinearLayout>






</LinearLayout>