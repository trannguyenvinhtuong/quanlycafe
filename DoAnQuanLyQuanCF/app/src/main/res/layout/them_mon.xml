<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Thêm Order"
        android:textSize="30dp"
        android:textColor="#D60B23"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Đồ uống:"
        android:textSize="15dp"
        android:textColor="#00BCD4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinnerLoai"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <Spinner
        android:id="@+id/spinnerHuong"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:text="Topping"
        android:textSize="15dp"
        android:textColor="#00BCD4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinnerThem"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:text="Đồ ăn"
        android:textSize="15dp"
        android:textColor="#00BCD4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinnerDoAn"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonThemOrder"
            android:layout_margin="2dp"
            android:text="Thêm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonHuyOrder"
            android:layout_margin="2dp"
            android:text="Hủy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
