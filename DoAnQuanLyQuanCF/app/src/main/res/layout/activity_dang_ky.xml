<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".khachhangactivity.DangKy">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background1"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        >
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ tên..."
            android:id="@+id/dkhoten"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ..."
            android:id="@+id/dkdc"
            android:layout_below="@+id/dkhoten"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email..."
            android:id="@+id/dkemail"
            android:layout_below="@+id/dkdc"
            />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/dkemail"
            android:id="@+id/layout1"
            android:weightSum="10">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại..."
                android:id="@+id/dksdt"
                android:layout_marginRight="10dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:hint="Năm sinh..."
                android:id="@+id/dknamsinh"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:hint="Tên đăng nhập..."
            android:id="@+id/dktendn"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/dktendn"
            android:id="@+id/layout2"
            android:weightSum="10">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu..."
                android:id="@+id/dkmk"
                android:layout_marginRight="10dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:hint="Xác nhận ..."
                android:id="@+id/dkxnmk"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/layout2"
            android:text="Đăng ký"
            android:backgroundTint="@color/buttoncolor"
            android:id="@+id/btndk"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btndk"
            android:weightSum="10"
            android:padding="20dp"
            >
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản?"
                ></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Đăng nhập ngay!"
                android:textColor="#FF5722"
                android:id="@+id/linkdn">

            </TextView>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>