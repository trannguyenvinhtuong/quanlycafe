<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:text="Cập nhật Thực đơn"
        android:textSize="30dp"
        android:textColor="#E1133C"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtMon"
        android:text="Món"
        android:textSize="15dp"
        android:textColor="#00BCD4"
        android:gravity="center"
        android:layout_below="@id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtGiaTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtMon"
        android:hint="Nhập giá tiền thay đổi"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_Luu"
        android:layout_margin="2dp"
        android:text="Lưu"
        android:layout_below="@id/edtGiaTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_Huy"
        android:layout_margin="2dp"
        android:text="Hủy"
        android:layout_below="@+id/edtGiaTien"
        android:layout_toRightOf="@id/btn_Luu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>